<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hxz.mybatis.mapper.CacheMapper">
    <!-- 使用二级缓存 -->
    <cache type="org.mybatis.caches.ehcache.EhcacheCache"/>

    <select id="getById" resultType="com.hxz.mybatis.entity.Emp">
        select *
        from mybatis.t_emp
        where eid = #{id}
    </select>
</mapper>
